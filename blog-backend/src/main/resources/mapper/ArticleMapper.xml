<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.kuailemao.mapper.ArticleMapper">


    <select id="selectArticleStats" resultType="xyz.kuailemao.domain.dto.ArticleStatsDTO">
        SELECT
            COUNT(*) AS articleCount,
            MAX(update_time) AS lastUpdateTime,
            COALESCE(SUM(visit_count), 0) AS visitCount
        FROM t_article
    </select>

</mapper>